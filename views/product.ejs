            <div class="gds_img">
              <img src="<%= rows[i].img %>">
            </div>
            <div class="txt_wrap">
              <p class="txt_title"><a href="#"><%= rows[i].title %></a></p>
              <p class="price"><a href="#"><%= rows[i].price %>원</a></p>
            </div>
          </li>
          <% }; %>
        </ul>
      </div>
    </article>

    
  </div>
</section>
